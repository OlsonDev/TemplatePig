{
  "name": "template-pig",
  "displayName": "Template Pig",
  "description": "Create and use simple to complex file/folder templates.",
  "version": "1.0.4",
  "license": "MIT",
  "repository": "github:OlsonDev/TemplatePig",
  "publisher": "OlsonDev",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:templatePig.newTemplate",
    "onCommand:templatePig.useTemplate"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Template Pig",
      "properties": {
        "templatePig.templatesPath": {
          "type": "string",
          "default": ".templates",
          "description": "Controls where templates are created/discovered relative to a VS Code workspace."
        },
        "templatePig.globalTemplatesPath": {
          "type": "string",
          "default": "",
          "description": "Controls where templates are created/discovered relative to this machine."
        }
      }
    },
    "commands": [
      {
        "command": "templatePig.newTemplate",
        "title": "Template Pig: New template"
      },
      {
        "command": "templatePig.useTemplate",
        "title": "Template Pig: Use template"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "templatePig.useTemplate",
          "group": "navigation@0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.184",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "is-lower-case": "^2.0.2",
    "is-upper-case": "^2.0.2",
    "lodash": "^4.17.21",
    "lower-case": "^2.0.2",
    "lower-case-first": "^2.0.2",
    "pluralize": "^8.0.0",
    "title-case": "^3.0.3",
    "upper-case": "^2.0.2",
    "upper-case-first": "^2.0.2"
  }
}
